<%- if controller_name != 'sessions' %>
<div class="d-flex flex-column justify-content-center pt-3">
  <%= link_to "Already a member? Log in!", new_session_path(resource_name), class:"devise-h3" %>
</div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<div class="d-flex flex-column justify-content-center pt-3">
  <%= link_to "Not a member? Register!", new_registration_path(resource_name), class:"devise-h3" %>
</div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
<div class="d-flex flex-column justify-content-center">
  <%= link_to "Forgot your password?", new_password_path(resource_name), class:"devise-h3" %>
</div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
<div class="d-flex flex-column justify-content-center p-3">
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class:"devise-h3" %>
</div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
<div class="d-flex flex-column justify-content-center p-3">
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class:"devise-h3" %>
</div>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %>
  <% end %>
<% end %>
