<% @lunch.photos.each do |photo| %>
  <% if lunch.photos.attached? %>
    <%= cl_image_tag lunch.photos.first.key, height: 250 %>
  <% else %>
    <%= image_tag('lunch.jpeg') %>
  <% end %>
<% end %>

 <h1><%= @lunch.title %></h1>
 <%= @lunch.description %>
 <% @lunch.tags.each do |tag| %>
 <%= tag %>
 <% end %>

<%# hide the links for unauthorized users %>
<% if policy(@lunch).edit? %>
  <%= link_to "Edit this lunch", edit_group_lunch_path([@group, @lunch]) %>
<% end %>
<!-- [bouton destroy] -->
<%= button_to "Destroy this lunch", group_lunch_path([@group,@lunch]), method: :delete if policy(@lunch).destroy? %>
<%= link_to "Ask this lunch", new_group_lunch_swap_path(@group, @lunch) %>
