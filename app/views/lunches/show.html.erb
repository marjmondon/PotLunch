<div class="text-center">
    <%= link_to "Chat for details", new_group_lunch_path(@group), class:"header__button-outlined" %>
    <%= link_to "Claim now", new_group_lunch_path(@group), class:"header__button" %>
</div>
<%# hide the links for unauthorized users %>
<% if policy(@lunch).edit? %>
  <%= link_to "Edit this lunch", edit_group_lunch_path([@group, @lunch]) %>
<% end %>
<!-- [bouton destroy] -->
<%= button_to "Destroy this lunch", group_lunch_path([@group,@lunch]), method: :delete if policy(@lunch).destroy? %>

<% if (@lunch.user != current_user) && (@swap.exists? == false) %>
  <%= link_to "Ask this lunch", new_lunch_swap_path(@lunch) %>
<% end %>
