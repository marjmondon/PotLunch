<%= link_to swap_chatroom_path(notification.swap.id), class: "dropdown-item" do %>
  <%= notification.content %> for <%= notification.swap.lunch.title %> from
  <% if notification.user == notification.swap.lunch.user %>
    <%= notification.swap.user.first_name %>
  <% else %>
    <%= notification.swap.lunch.user.first_name %>
  <% end %>
<% end %>
