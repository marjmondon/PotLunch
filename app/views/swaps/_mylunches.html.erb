<%# My Lunches %>
<% if @lunches.nil? %>
  <p>You didn't create lunch yet!</p>
<% else %>
    <% @lunches.each do |lunch| %>
      <div class="card-product d-flex shadow p-3 mb-5 bg-white rounded">
        <% if lunch.photos.attached? %>
          <%= cl_image_tag lunch.photos.first.key, height: 250%>
        <% else %>
          <%= image_tag('lunch.jpg') %>
        <% end %>
        <div class="card-product-infos">
          <h2><%= link_to "#{lunch.title.capitalize}", group_lunch_path(lunch.group_id, lunch) %></h2>
          <p><%= lunch.description %></p>
          <%= link_to "Edit this lunch", edit_group_lunch_path(lunch.group_id, lunch), class:"header__button" %>
          <%= button_to "Destroy this lunch", group_lunch_path(lunch.group_id, lunch), class:"header__button" %>
        </div>
      </div>
    <% end %>
<% end %>
