<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
  <div class="card-text-spacing">
    <h1>Hello <%=current_user.first_name.capitalize %></h1>
    <%= link_to "Share a lunch", new_group_lunch_path, class:"header__button" %>
  </div>
</div>
 
 <% @lunches.each do |lunch| %>
  <% if lunch.photos.attached? %>
    <%= cl_image_tag lunch.photos.first.key, height: 250%>
  <% else %>
    <%= image_tag('lunch.jpeg') %>
  <% end %>
  <%= link_to "#{lunch.title}", group_lunch_path(@group, lunch) %>

<% end %>
<br>
<br>
<%= link_to "Create a lunch", new_group_lunch_path(@group) %>
