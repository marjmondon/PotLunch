<div class="card-show">
  <% if @lunch.photos.attached? %>
    <% @lunch.photos.each do |photo| %>
      <%= cl_image_tag photo.key, height: 250 %>
    <% end %>
  <% else %>
    <%= image_tag('lunch.jpeg') %>
  <% end %>
  <div>
    <ul class="d-flex justify-content-between">
      <div class ="d-flex">
        <%= cl_image_tag User.find(@lunch.user_id).avatar.key, height: 60, class:"rounded-circle" %>
        <li class="icons"><%= @lunch.user.first_name %> <%= @lunch.user.last_name %></li>
      </div>
      <div class="card-show-info-bar">

        <li class="icons"><%= link_to image_tag("AddGroupButton.png") %></li>
        <li class="icons"><%= link_to image_tag("AddGroupButton.png") %></li>
        <li class="icons"><%= link_to image_tag("AddGroupButton.png") %></li>
      </div>
    </ul>
  </div>
</div>

<div class="card-show-info">
  <div class="card-show-title">
    <h1 class=" text-center"><%= @lunch.title %></h1>
    <div class="d-flex align-items-center">
      <p class="strong">Cooking date:</p> <%= @lunch.cooking_date %>
    </div>
    <div class="d-flex align-items-center">
      <p>Lunch coins: </p><%= "10 tokens" %>
    </div>
    <div class="d-flex align-items-center">
      <p>Recipe url: <%= @lunch.recipe_url %></p>
    </div>
    <div class="d-flex align-items-center">
    <p>Description:  <%= @lunch.description %></p>
    </div>
  </div>
</div>

