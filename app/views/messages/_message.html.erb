<div id="message-<%= message.id %>">
  <small>
    <%= cl_image_tag User.find(message.user_id).avatar.key, height: 30, class:"rounded-circle" %>
    <strong><%= message.user.first_name.capitalize %></strong>
    <i><%= message.created_at.in_time_zone("America/New_York").strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p class="border-top my-1"><%= message.content %></p>
</div>
